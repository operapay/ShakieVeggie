extends layout1

block content
    h1 Register
    form(method='POST',action='/users/register')
        #form-group
            label Firstname:
            input.form-control(name='firstname',type='text')
        #form-group
            label Lastname:
            input.form-control(name='lastname',type='text')
        #form-group
            label Email:
            input.form-control(name='email',type='text')
        #form-group
            label Phone:
            input.form-control(name='phone',type='text')
        #form-group
            label Username:
            input.form-control(name='username',type='text')
        #form-group
            label Password:
            input.form-control(name='password',type='password')
        #form-group
            label Confirm Password:
            input.form-control(name='password2',type='password')
        br
        input.btn.btn-primary(type='submit',value='Register')