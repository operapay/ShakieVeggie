		.container
			!= messages('message',locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
		#carouselExampleControls.carousel.slide(data-ride='carousel')
			.carousel-inner
				.carousel-item.active
					each formula, i in formulas
						if(formula.formulaname == "Detox")
							if !user
								a(href="/users/login")
									img#pos(src='/img/button_ordernow.png')
									img.d-block.w-100(src='/img/Detox_bg.png', alt='Detox')
									h5.title-pos DETOX
									p.comp-pos GUAVA - KIWI - JOB'S TEARS
							else
								a(href="/recommend/" + formula._id)
									img#pos(src='/img/button_ordernow.png')
