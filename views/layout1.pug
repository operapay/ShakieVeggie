        link(rel='stylesheet', href='/bower_components/sweetalert/lib/sweet-alert.css')
        
        
    body(onload="load()")
        // ----------------Navbar-------------------
        div(style="position:absolute; z-index:1;right:0;")
            button.login
                if user
                    a(href='/cart/' + orders._id)
                        img.cart_pos(src='/img/cart.png')
            button.login
                if user
                    a(href='/users/logout')#white logout
                    button.login
                        h9 #{user.username}
                else
                    a(href='/users/login')#white login
            button.login
                if user
                    //a(href='/users/login')#white login
                    a(href='/tracking/' + user._id)#login tracking
        a(href='/')(style="position:absolute; z-index:1;left:2.75%;top:5.5%")
            img.logo-pos(src='/img/logo_circle.png')
        // ------------------------------------------


        != messages('message',locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content 

        script(src='/js/main.js')
        script(src='https://code.jquery.com/jquery-3.3.1.min.js')
