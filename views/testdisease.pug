extends layout1

block content
  .row.pt-5.text-center
    .col
      h1.text-info Shopping cart
      p.text-muted You currently have 3 item(s) in your cart.
  .container
      .row
        #basket.col-lg-9
          hr
          .box
            form(method='post', action='#')
              .table-responsive
                #myModal.modal.fade(role='dialog')
                  .modal-dialog
                    // Modal content
                    .modal-content
                      .modal-header
                        h4.modal-title Are you sure?
                        button.close(type='button', data-dismiss='modal') Ã—
                      .modal-body
                        p Are you sure that you want to delete this product?
                      .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Sure
                table.table
                  thead
                    tr
                      th Type
                      th(colspan='2') Formula
                      th Quantity
                      th Unit price
                      th(colspan='2') Total
                  tbody
                    tr
                      td Vitamin A
                      td(colspan='2') apple,banana
                      td 2
                      td $123.00
                      td $246.00
                      td
                        button.fa.fa-trash-o(type='button', data-toggle='modal', data-target='#myModal')
              .py-3.px-3.box-footer.d-flex.justify-content-between.flex-column.flex-lg-row.bg-light.border-bottom.border-top
                .left
                  a.btn.btn-outline-secondary(href='#')
                    i.fa.fa-chevron-left
                    strong Continue shopping
                .right
                  button.btn.btn-outline-primary(type='submit')
                    strong Checkout 
                    i.fa.fa-chevron-right