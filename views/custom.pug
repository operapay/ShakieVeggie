                            label.form-check-label(for='exampleRadios3') component
            .col-sm-9.col-md-7.col-lg-4.mx-auto
                .card.card-signin.my-5
                    .card-body
                        h5.card-title.text-center Vit3
                        .form-check
                            input#exampleRadios1.form-check-input(type='radio', name='exampleRadios3', value='vit3.1', checked='')
                            label.form-check-label(for='exampleRadios1') component
