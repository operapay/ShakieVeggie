extends layout_cus
block content
    link(rel='stylesheet', type='text/css', href='/css/style.css')
    link(rel='stylesheet', type='text/css', href='/css/custom.css')
    #myModal.modal
        // Modal content
        .modal-content
            h2.text-center Health Condition
            .mt-3
            form(method='POST',action='/custom/'+  orders + "/" + formula._id)
                .form-check
                    input#kidney.form-check-input(type='checkbox', name='kidney')
                    label.form-check-label(for='kidney')
                        | kidney
                .form-check
                    input#liver.form-check-input(type='checkbox', name='liver')
                    label.form-check-label(for='liver')
                        | liver
                .form-check
                    input#hyper.form-check-input(type='checkbox', name='hypertension')
                    label.form-check-label(for='hypertension')
                        | hypertension
                .form-check
                    input#diabete.form-check-input(type='checkbox', name='diabetes')
                    label.form-check-label(for='diabete')
                        | diabete
                .form-check
                    input#pregnant.form-check-input(type='checkbox', name='pregnant')
                    label.form-check-label(for='pregnant')
                        | pregnant
                .form-check
                    input#surgery.form-check-input(type='checkbox', name='surgery')
                    label.form-check-label(for='surgery')
                        | surgery
                button.btn.btn-lg.btn-defult.btn-block.text-uppercase#myBtn(type='submit',value='Submit') Submit
    
    form(method='POST',action='/custom/'+  orders + "/" + formula._id + '/component')
        
