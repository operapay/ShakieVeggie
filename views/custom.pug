extends layout1

block content
    h1.text-center Detox Formula
    form(method='POST',action='/custom')
    br
    img.img-responsive.center-block(src='https://www.img.live/images/2018/10/05/bottle.png')
    br
    .col-sm-9.col-md-7.col-lg-4.mx-auto
        .card.card-signin.my-5
            .card-body
                h5.card-title.text-center Vit1
                .form-check
                    input#kidney.form-check-input(type='checkbox', value='kidney')
                    label.form-check-label(for='kidney')
                        | kidney
                .form-check
                    input#liver.form-check-input(type='checkbox', value='liver')
                    label.form-check-label(for='liver')
                        | liver
                .form-check
                    input#hyper.form-check-input(type='checkbox', value='hypertension')
                    label.form-check-label(for='hypertension')
                        | hypertension
                .form-check
                    input#diabete.form-check-input(type='checkbox', value='diabetes')
                    label.form-check-label(for='diabete')
                        | diabete
                .form-check
                    input#pregnant.form-check-input(type='checkbox', value='pregnant')
                    label.form-check-label(for='pregnant')
                        | pregnant
                .form-check
                    input#surgery.form-check-input(type='checkbox', value='surgery')
                    label.form-check-label(for='surgery')
                        | surgery
    br
    button.btn.btn-lg.btn-defult.btn-block.text-uppercase(type='submit',value='Submit') Submit				