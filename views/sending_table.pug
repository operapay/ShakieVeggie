extend layout1

block content

    style.
        body{
            background-color: #8ED2C9;
        }
        .title-block{
            position: relative;
            padding-bottom: 50px;

        }
        .title{
            position: absolute;
            font-size: 80px; 
            font-weight: 620;
            color: white;
            left: 22%;
            right:22%;
            text-align: center;
        }
        .reg{
            width: 750px;
            height: 60px;
            background-color: #ffcc1b;
            position: inherit;
            top:70px;
            left: 18%;
            z-index: -1;
        }
        .mt-5{
            background-color: white;
        }
        thead{
            background-color: #8ED2C9;
            border-color: white;
            color: white;
        }
        tbody{
            background-color: white;
            color: #8ED2C9;
        }
        tbody tr{
            border: 4px solid;
            margin: 10px;
            border-color: #8ED2C9;
        }
        .inputbox{
            color:#8ED2C9;
            background: transparent;
            border: none;
            border-bottom: 1px solid;
            outline:none;
            box-shadow:none;
        }
        ::placeholder{
            color: #8ED2C9;
            text-align: center;
        }
        .status{
            outline: none;
            border-radius:4px;
            font-weight:700;
        }
        .container{
            max-width: 100%;
        }
    
    .title-block 
        .title SENDING TABLE
        .reg

    table(style='width:100%' ).mt-5
        thead
            .ab
                tr
                    th(height='60').text-center ORDER
                    th(height='60').text-center USERNAME
                    th(height='60').text-center ADDRESS
                    th(height='60').text-center SENDING STATUS
                    th(height='60').text-center TRACKING NO.
                    th(height='60')
        tbody
            each order, i in orders
                tr
                    if order.paymentstatus == 0 && order.clearsending != 2
                        td(align='center' height='60')=order._id
                        td(align='center' height='60')=order.username
                        td(align='center' height='60')=order.address
                        if order.mixingstatus == 0
                            td(align='center')
                                form(action="/admin/sending2/" + order._id, method="post")
                                    input.status(onclick="change(this);track(this)" type="submit" value="READY" )
                            if order.trackingnum == null
                                form(method='POST',action="/admin/tracking/" + order._id)
                                    td(align='center') 
                                        #form-group
                                            input.inputbox(type='text', placeholder='Tracking No.', name='trackingnum')
                                    td(align='center') 
                                        input.status(type="submit" value="SUBMIT")
                            else
                                td(align='center') 
                                    text(type='text', name='trackingnum') #{order.trackingnum}
                                td(align='center') 
                                    form(method='POST',action="/admin/tracking2/" + order._id)
                                        button.status(type="submit" value="SUBMIT") Edit

                        else
                            td(align='center') 
                                form(action="/admin/sending/" + order._id, method="post")
                                    input.status(onclick="change(this);track(this)" type="submit" value="NOT READY" )
                            td(align='center') 
                                input.inputbox(type='text', placeholder='Tracking No.', name='tracking',disabled="")
    form(method='POST',action='/admin/clearsending')
        button.btn.btn(type='submit',value='Submit',style='color:white;float:right') CLEAR